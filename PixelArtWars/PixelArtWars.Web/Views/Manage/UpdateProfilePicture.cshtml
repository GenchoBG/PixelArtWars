@model UpdateProfilePictureViewModel
@{
    ViewData["Title"] = "Update Profile Picture";
    ViewData.AddActivePage(ManageNavPages.UpdateProfilePicture);
}

<h4>@ViewData["Title"]</h4>
<img style="max-height: 250px; margin: 20px 0 20px 0" src="@Model.ProfilePicture"/>
<form method="post" enctype="multipart/form-data">
    <input type="file" name="file" class="form-control-file" aria-describedby="fileHelp">
    <input type="submit" style="margin: 10px 0 10px 0" class="btn btn-primary" value="Update"/>
</form>